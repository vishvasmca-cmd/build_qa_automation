{
  "HomePage": {
    "description": "The home page of Anthropic, introducing the company and its AI research and products, particularly Claude Opus 4.5.",
    "url_pattern": "https://www.anthropic.com/",
    "elements": [
      {
        "name": "Try Claude Button",
        "type": "button",
        "primary_locator": "role=button[name=\"Try Claude\"]",
        "backup_locator": "text=Try Claude",
        "description": "Button to try Claude."
      },
      {
        "name": "Research Link",
        "type": "link",
        "primary_locator": "text=Research",
        "backup_locator": "a[href='/research']",
        "description": "Link to the research page."
      },
      {
        "name": "Economic Futures Link",
        "type": "link",
        "primary_locator": "text=Economic Futures",
        "backup_locator": "a[href='/economic-futures']",
        "description": "Link to the Economic Futures page."
      },
      {
        "name": "Commitments Dropdown",
        "type": "button",
        "primary_locator": "text=Commitments",
        "backup_locator": "button[aria-haspopup='true'][aria-expanded='false']:has-text('Commitments')",
        "description": "Dropdown menu for Commitments."
      },
      {
        "name": "Learn Dropdown",
        "type": "button",
        "primary_locator": "text=Learn",
        "backup_locator": "button[aria-haspopup='true'][aria-expanded='false']:has-text('Learn')",
        "description": "Dropdown menu for Learn."
      },
      {
        "name": "News Link",
        "type": "link",
        "primary_locator": "text=News",
        "backup_locator": "a[href='/news']",
        "description": "Link to the News page."
      },
      {
        "name": "Introducing Claude Opus 4.5 Link",
        "type": "link",
        "primary_locator": "text=Introducing Claude Opus 4.5",
        "backup_locator": "a:has-text('Introducing Claude Opus 4.5')",
        "description": "Link to learn more about Claude Opus 4.5."
      },
      {
        "name": "Advanced tool use on the Claude Link",
        "type": "link",
        "primary_locator": "text=Advanced tool use on the Claude",
        "backup_locator": "a:has-text('Advanced tool use on the Claude')",
        "description": "Link to learn more about Advanced tool use on the Claude."
      }
    ],
    "assertions": [
      "Page title contains 'Anthropic'",
      "Header text contains 'AI research and products that put safety at the frontier'",
      "The 'Try Claude' button is visible"
    ]
  }
}