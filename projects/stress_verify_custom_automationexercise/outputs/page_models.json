{
  "ProductsPage": {
    "description": "Displays a list of products available for purchase.",
    "url_pattern": "/products",
    "elements": [
      {
        "name": "search_product_input",
        "type": "text_field",
        "primary_locator": "get_by_placeholder('Search Product')",
        "backup_locator": "locator('#search_product')",
        "description": "Input field to search for products"
      },
      {
        "name": "search_button",
        "type": "button",
        "primary_locator": "locator('#submit_search')",
        "backup_locator": "get_by_role('button', name='Search')",
        "description": "Button to submit the product search"
      },
      {
        "name": "category_women_button",
        "type": "button",
        "primary_locator": "locator('#accordian > div:nth-child(2) > a')",
        "backup_locator": "get_by_text('Women')",
        "description": "Button to expand the women category"
      },
      {
        "name": "category_men_button",
        "type": "button",
        "primary_locator": "locator('#accordian > div:nth-child(3) > a')",
        "backup_locator": "get_by_text('Men')",
        "description": "Button to expand the men category"
      },
      {
        "name": "category_kids_button",
        "type": "button",
        "primary_locator": "locator('#accordian > div:nth-child(4) > a')",
        "backup_locator": "get_by_text('Kids')",
        "description": "Button to expand the kids category"
      }
    ],
    "assertions": [
      "expect(page).to_have_title('Automation Exercise - All Products')",
      "expect(page.locator('h2', has_text='All Products')).to_be_visible()"
    ]
  },
  "UnknownPage": {
    "description": "Search results page for products",
    "url_pattern": "/products\\?search=",
    "elements": [
      {
        "name": "search_input",
        "type": "text_field",
        "primary_locator": "get_by_role('textbox')",
        "backup_locator": "locator('input#search_product')",
        "description": "Input field for searching products"
      },
      {
        "name": "search_button",
        "type": "button",
        "primary_locator": "get_by_role('button')",
        "backup_locator": "locator('#search_product > .fa.fa-search')",
        "description": "Button to submit the search query"
      },
      {
        "name": "products_link",
        "type": "link",
        "primary_locator": "get_by_role('link', name='Products')",
        "backup_locator": "locator('a[href=\"/products\"]')",
        "description": "Link to the products page"
      }
    ],
    "assertions": [
      "expect(page).to_have_title('Automation Exercise - All Products')",
      "expect(page.locator('div.features_items').locator('div.col-sm-4').first()).to_be_visible()",
      "expect(page.locator('h2', has_text='Searched Products')).to_be_visible()"
    ]
  }
}