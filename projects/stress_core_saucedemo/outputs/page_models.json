{
  "HomePage": {
    "description": "Login page for Swag Labs application",
    "url_pattern": "/login",
    "elements": [
      {
        "name": "username_field",
        "type": "text_field",
        "primary_locator": "get_by_text('Username')",
        "backup_locator": "locator('#user-name')",
        "description": "Input field for username"
      },
      {
        "name": "password_field",
        "type": "text_field",
        "primary_locator": "get_by_text('Password')",
        "backup_locator": "locator('#password')",
        "description": "Input field for password"
      },
      {
        "name": "login_button",
        "type": "button",
        "primary_locator": "get_by_role('button', name='Login')",
        "backup_locator": "locator('#login-button')",
        "description": "Button to submit login credentials"
      }
    ],
    "assertions": [
      "expect(page).to_have_title('Swag Labs')",
      "expect(page.locator('#login-button')).to_be_visible()",
      "expect(page.locator('#user-name')).to_be_visible()",
      "expect(page.locator('#password')).to_be_visible()"
    ]
  },
  "SwagLabsPage": {
    "description": "Login page for customer access",
    "url_pattern": "/login",
    "elements": [
      {
        "name": "username_field",
        "type": "textbox",
        "primary_locator": "get_by_text('standard_user')",
        "backup_locator": "locator('input[placeholder=\"Username\"]')",
        "description": "Username input field"
      },
      {
        "name": "password_field",
        "type": "textbox",
        "primary_locator": "get_by_text('secret_sauce')",
        "backup_locator": "locator('input[placeholder=\"Password\"]')",
        "description": "Password input field"
      },
      {
        "name": "login_button",
        "type": "button",
        "primary_locator": "get_by_role('button', name='Login')",
        "backup_locator": "locator('#login-button')",
        "description": "Main submission button"
      }
    ],
    "assertions": [
      "expect(page).to_have_title('Swag Labs')",
      "expect(page.get_by_role('button', name='Login')).to_be_visible()"
    ]
  },
  "SaucedemoInventoryPage": {
    "description": "Inventory page displaying available products",
    "url_pattern": "/inventory.html",
    "elements": [
      {
        "name": "product_sort_dropdown",
        "type": "dropdown",
        "primary_locator": "get_by_role('button', name='Name (A to Z)')",
        "backup_locator": "locator('[data-test=\"product_sort_container\"]')",
        "description": "Dropdown to sort products"
      },
      {
        "name": "add_to_cart_backpack",
        "type": "button",
        "primary_locator": "get_by_role('button', name='Add to cart', exact=True).nth(0)",
        "backup_locator": "locator('#add-to-cart-sauce-labs-backpack')",
        "description": "Add to cart button for the Sauce Labs Backpack"
      },
      {
        "name": "add_to_cart_bike_light",
        "type": "button",
        "primary_locator": "get_by_role('button', name='Add to cart', exact=True).nth(1)",
        "backup_locator": "locator('#add-to-cart-sauce-labs-bike-light')",
        "description": "Add to cart button for the Sauce Labs Bike Light"
      },
      {
        "name": "add_to_cart_bolt_tshirt",
        "type": "button",
        "primary_locator": "get_by_role('button', name='Add to cart', exact=True).nth(2)",
        "backup_locator": "locator('#add-to-cart-sauce-labs-bolt-t-shirt')",
        "description": "Add to cart button for the Sauce Labs Bolt T-Shirt"
      },
      {
        "name": "add_to_cart_fleece_jacket",
        "type": "button",
        "primary_locator": "get_by_role('button', name='Add to cart', exact=True).nth(3)",
        "backup_locator": "locator('#add-to-cart-sauce-labs-fleece-jacket')",
        "description": "Add to cart button for the Sauce Labs Fleece Jacket"
      },
      {
        "name": "add_to_cart_onesie",
        "type": "button",
        "primary_locator": "get_by_role('button', name='Add to cart', exact=True).nth(4)",
        "backup_locator": "locator('#add-to-cart-sauce-labs-onesie')",
        "description": "Add to cart button for the Sauce Labs Onesie"
      },
      {
        "name": "add_to_cart_red_tshirt",
        "type": "button",
        "primary_locator": "get_by_role('button', name='Add to cart', exact=True).nth(5)",
        "backup_locator": "locator('#add-to-cart-test.allthethings()-t-shirt-(red)')",
        "description": "Add to cart button for the Test.allTheThings() T-Shirt (Red)"
      }
    ],
    "assertions": [
      "expect(page).to_have_title('Swag Labs')",
      "expect(page.locator('.title')).to_have_text('Products')",
      "expect(page.locator('.inventory_item')).to_have_count(6)"
    ]
  }
}