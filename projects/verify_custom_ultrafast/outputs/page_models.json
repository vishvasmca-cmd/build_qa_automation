{
  "LoginFormPage": {
    "description": "This is the login form page for the demo app.",
    "url_pattern": "https://demo.applitools.com/app.html",
    "elements": [
      {
        "name": "Username Input",
        "type": "text field",
        "primary_locator": "id=username",
        "backup_locator": "css=input[placeholder='Enter your username']",
        "description": "Input field for username"
      },
      {
        "name": "Password Input",
        "type": "text field",
        "primary_locator": "id=password",
        "backup_locator": "css=input[placeholder='Enter your password']",
        "description": "Input field for password"
      },
      {
        "name": "Sign In Button",
        "type": "button",
        "primary_locator": "id=log-in",
        "backup_locator": "css=#log-in",
        "description": "Button to submit the login form"
      },
      {
        "name": "Remember Me Checkbox",
        "type": "checkbox",
        "primary_locator": "class=form-check-input",
        "backup_locator": "text=Remember Me",
        "description": "Checkbox to remember the user"
      }
    ],
    "assertions": [
      "Page title is 'ACME demo app'",
      "Login Form header is present",
      "Username input field is present",
      "Password input field is present",
      "Sign In button is present"
    ]
  },
