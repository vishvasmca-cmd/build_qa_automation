{
  "project": "ci_automation_exercise",
  "goal": "Navigate homepage, view products, search for 'dress', filter results, add product to cart, view cart",
  "base_url": "https://www.automationexercise.com/",
  "scenarios": [
    {
      "id": "TC001",
      "name": "Product Search, Filter, and Add to Cart",
      "description": "Navigates the homepage, searches for 'dress', filters results (if applicable), adds a product to the cart, and views the cart.",
      "steps": [
        {
          "keyword": "navigate",
          "args": {
            "url": "https://www.automationexercise.com/"
          }
        },
        {
          "keyword": "assert_url",
          "args": {
            "expected_url": "https://www.automationexercise.com/"
          }
        },
        {
          "keyword": "fill",
          "args": {
            "value": "dress",
            "description": "Search"
          }
        },
        {
          "keyword": "press",
          "args": {
            "key": "Enter",
            "description": "Search"
          }
        },
        {
          "keyword": "assert_url",
          "args": {
            "expected_url": "https://www.automationexercise.com/products?search=dress"
          }
        },
        {
          "keyword": "click",
          "args": {
            "description": "View Product"
          }
        },
        {
          "keyword": "assert_visible",
          "args": {
            "description": "Write Your Review"
          }
        },
        {
          "keyword": "click",
          "args": {
            "description": "Add to cart"
          }
        },
        {
