{
  "LoginPage": {
    "description": "This is the login page for OrangeHRM. Users can enter their username and password to access the system.",
    "url_pattern": "https://opensource-demo.orangehrmlive.com/web/index.php/auth/login",
    "elements": [
      {
        "name": "Username Input",
        "type": "input",
        "primary_locator": "[name='username']",
        "backup_locator": "input[placeholder='Username']",
        "description": "Input field for the username."
      },
      {
        "name": "Password Input",
        "type": "input",
        "primary_locator": "[name='password']",
        "backup_locator": "input[placeholder='Password']",
        "description": "Input field for the password."
      },
      {
        "name": "Login Button",
        "type": "button",
        "primary_locator": "button[type='submit']",
        "backup_locator": "button:has-text('Login')",
        "description": "Button to submit the login form."
      },
      {
        "name": "Forgot your password?",
        "type": "link",
        "primary_locator": "a:has-text('Forgot your password?')",
        "backup_locator": "p.oxd-text.oxd-text--p.orangehrm-login-forgot-header",
        "description": "Link to navigate to the 'Forgot Password' page."
      }
    ],
    "assertions": [
      "Page title contains 'OrangeHRM'",
      "Login form is displayed",
      "Username input field is present",
      "Password input field is present",
      "Login button is present"
    ]
  }
}