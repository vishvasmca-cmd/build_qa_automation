        {
          "id": "step_3_fill_password",
          "keyword": "fill",
          "args": {
            "description": "Enter your password",
            "locator": "#password",
            "value": "password"
          },
          "locators": [
            {
              "value": "#password",
              "confidence": 0.95,
              "priority": 0,
              "is_unique": true,
              "is_visible": true
            }
          ]
        },
        {
          "id": "step_4_click_signin",
          "keyword": "click",
          "args": {
            "description": "Sign in",
            "locator": "a#log-in"
          },
          "locators": [
            {
              "value": "a#log-in",
              "confidence": 0.95,
              "priority": 0,
              "is_unique": true,
              "is_visible": true
            }
          ]
        },
