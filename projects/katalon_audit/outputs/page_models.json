{
    "HomePage": {
        "description": "The Katalon homepage aims to introduce users to the Katalon platform.",
        "url_pattern": "https://katalon.com/",
        "elements": [
            {
                "name": "products_menu",
                "primary_locator": "getByRole('button', { name: 'Products' })",
                "backup_locator": "getByText('Products')",
                "description": "Dropdown menu for Katalon products."
            },
            {
                "name": "solutions_menu",
                "primary_locator": "getByRole('button', { name: 'Solutions' })",
                "backup_locator": "getByText('Solutions')",
                "description": "Dropdown menu for Katalon solutions."
            }
        ],
        "assertions": [
            "expect(this.page).toHaveTitle(/.*Katalon.*/i)"
        ]
    }
}