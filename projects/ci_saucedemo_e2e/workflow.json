{
  "project": "ci_saucedemo_e2e",
  "goal": "Login with 'standard_user'/'secret_sauce'. 1) Sort items by 'Price (low to high)'. 2) Add the cheapest AND the most expensive item to the cart. 3) Go to cart, verify 2 items exist. 4) Checkout (Zip: 90210) and verify the 'Item total' equals the sum of the two products exactly.",
  "base_url": "https://www.saucedemo.com/",
  "scenarios": [
    {
      "name": "saucedemo_e2e_sort_and_verify",
      "description": "Login, sort, add items, and verify checkout total.",
      "steps": [
        {
          "keyword": "navigate",
          "args": {
            "url": "https://www.saucedemo.com/"
          }
        },
        {
          "keyword": "fill",
          "args": {
            "description": "Username",
            "value": "standard_user",
            "locator": "#user-name"
          }
        },
        {
          "keyword": "fill",
          "args": {
            "description": "Password",
            "value": "secret_sauce",
            "locator": "#password"
          }
        },
        {
          "keyword": "click",
          "args": {
            "description": "Login",
            "locator": "#login-button"
          }
        },
        {
          "keyword": "click",
          "args": {
            "description": "Sort Dropdown"
          }
        },
        {
          "keyword": "click",
          "args": {
            "description": "Price (low to high)"
          }
        },
        {
          "keyword": "click",
          "args": {
            "description": "Add cheapest item to cart",
            "locator": ".inventory_item:first-child button"
          }
        },
        {
          "keyword": "click",
          "args": {
            "description": "Add most expensive item to cart",
            "locator": ".inventory_item:last-child button"
          }
        },
        {
          "keyword": "click",
          "args": {
            "description": "Shopping Cart",
            "locator": ".shopping_cart_link"
          }
        },
        {
          "keyword": "assert_text",
          "args": {
            "description": "Verify 2 items in cart badge",
            "locator": ".shopping_cart_badge",
            "expected_text": "2"
          }
        },
        {
          "keyword": "click",
          "args": {
            "description": "Checkout",
            "locator": "#checkout"
          }
        },
        {
          "keyword": "fill",
          "args": {
            "description": "First Name",
            "value": "Test",
            "locator": "#first-name"
          }
        },
        {
          "keyword": "fill",
          "args": {
            "description": "Last Name",
            "value": "User",
            "locator": "#last-name"
          }
        },
        {
          "keyword": "fill",
          "args": {
            "description": "Zip Code",
            "value": "90210",
            "locator": "#postal-code"
          }
        },
        {
          "keyword": "click",
          "args": {
            "description": "Continue",
            "locator": "#continue"
          }
        },
        {
          "keyword": "assert_visible",
          "args": {
            "description": "Item total label",
            "locator": ".summary_subtotal_label"
          }
        }
      ]
    }
  ]
}