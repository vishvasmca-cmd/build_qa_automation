{
  "LoginPage": {
    "description": "Login page for OrangeHRM application",
    "url_pattern": "/auth/login",
    "elements": [
      {
        "name": "username_field",
        "type": "textbox",
        "primary_locator": "get_by_placeholder('Username')",
        "backup_locator": "locator('input[name=\"username\"]')",
        "description": "Input field for username"
      },
      {
        "name": "password_field",
        "type": "textbox",
        "primary_locator": "get_by_placeholder('Password')",
        "backup_locator": "locator('input[name=\"password\"]')",
        "description": "Input field for password"
      },
      {
        "name": "login_button",
        "type": "button",
        "primary_locator": "get_by_role('button', name='Login')",
        "backup_locator": "locator('button[type=\"submit\"]')",
        "description": "Button to submit login credentials"
      },
      {
        "name": "forgot_password_link",
        "type": "link",
        "primary_locator": "get_by_text('Forgot your password?')",
        "backup_locator": "locator('p.oxd-text.oxd-text--p.orangehrm-login-forgot-header')",
        "description": "Link to navigate to the forgot password page"
      }
    ],
    "assertions": [
      "expect(page).to_have_title('OrangeHRM')",
      "expect(page.locator('div.orangehrm-login-branding')).to_be_visible()",
      "expect(page.locator('h5.oxd-text.oxd-text--h5.orangehrm-login-title')).to_have_text('Login')"
    ]
  },
  "OrangehrmDashboardPage": {
